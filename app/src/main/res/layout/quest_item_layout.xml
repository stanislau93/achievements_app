<?xml version="1.0" encoding="utf-8"?><!--Defines the layout of the single element in a recycler view-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/quest_list_item_padding"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/quest_list_item_sub_padding"
        android:layout_weight="1"
        android:layout_height="@dimen/quest_list_item_height"
        android:id="@+id/rec_view_quests_sub_1"
        android:layout_marginRight="2dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quest_title_sub_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/removeQuest_sub_1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bucket" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="@dimen/quest_list_item_sub_padding"
        android:layout_height="@dimen/quest_list_item_height"
        android:id="@+id/rec_view_quests_sub_2"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quest_title_sub_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/removeQuest_sub_2"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/bucket" />
    </LinearLayout>

</LinearLayout>

